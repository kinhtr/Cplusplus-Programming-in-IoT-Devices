#include "LimitedCouter.h"
#include "OverflowCounter.h"
#include <iostream>
using namespace std;


void UseCounter(Counter& ctr, int num);

int main(int argc, char** argv) {
	LimitedCounter lc(0, 5);
	OverflowCounter oc(5, 9);

	cout << oc << endl;
	UseCounter(oc, 5);
	cout << oc << endl; // should display zero
	UseCounter(oc, -1);
	cout << oc << endl; // should display 9
	oc.dec();
	cout << oc << endl; // should display 8

	cout << lc << endl;
	lc.inc();
	cout << lc << endl;
	lc.dec();
	cout << lc << endl;
	for(int i = 0; i < 10; ++i) lc.inc();
	cout << lc << endl;
	UseCounter(lc, -9);
	cout << lc << endl;

	return 0;
}

void UseCounter(Counter& ctr, int num) {
	bool dec(false);
	if (num < 0) {
		num *= -1;
		dec = true;
	}
	for (int i = 0; i < num; ++i) (dec) ? ctr.dec() : ctr.inc();
}
